<?php

/**
 * @file
 * Contains ethereum_user_connector.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;
use Drupal\Core\Entity\EntityInterface;

/**
 * Implements hook_help().
 */
function ethereum_user_connector_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the ethereum_user_connector module.
    case 'help.page.ethereum_user_connector':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Drupal Drupal user connector enables Drupal Users to verify an Ethereum account address.') . '</p>';
      return $output;

    default:
  }
}

/**
 * Provide default value callback.
 */
function ethereum_user_connector_default_status () {
  return 0;
}

/**
 * Pre save handler.
 *
 * If a user has submitted an address generate a hash and set the validation status.
 */
function ethereum_user_connector_user_presave(EntityInterface $entity) {

  $last_address = $entity->original->field_ethereum_address->getValue();
  $last_address = isset($last_address[0]['value']) ? $last_address->getValue()[0]['value'] : NULL;
  $curr_address = $entity->field_ethereum_address->getValue()[0]['value'];

  if (is_null($last_address) || $last_address !== $curr_address) {
    $hash = md5($GLOBALS['base_url'] . $curr_address);
    $entity->field_ethereum_drupal_hash->set(0, $hash);
    $entity->field_ethereum_account_status->set(0, 1);
  }
}

/**
 * Implements hook_theme().
 */
function ethereum_user_connector_theme() {
  $X = FALSE;
  return [
    'field_ethereum_account_status' => [
      'template' => 'ethereum_address_confirm',
      'render element' => 'field_ethereum_account_status',
    ],
  ];
}

function ethereum_user_connector_preprocess_field_ethereum_account_status(&$variables, $hook) {
  $variables['title'] = $variables['field_ethereum_account_status']['#title'];
  $variables['address'] = $variables['field_ethereum_account_status']['#ethereum_address'];
  $variables['hash'] = $variables['field_ethereum_account_status']['#ethereum_drupal_hash'];
  $variables['status_id'] = $variables['field_ethereum_account_status']['#status_number'];
  $variables['status'] = $variables['field_ethereum_account_status']['#status'];

}
